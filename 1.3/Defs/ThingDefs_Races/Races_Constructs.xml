	<!-- Steel -->
	<ThingDef ParentName="VPE_ConstructBase">
		<defName>VPE_SteelConstruct</defName>
		<label>steel construct</label>
		<description>A piece of steel slag, animated by powerful psychic energy. It will always follow the summoner who gave it life, and will defend them even if it means death.\n\n&lt;color=#E5E54C&gt;Gameplay effect:&lt;/color&gt;Constructs generate constant heat for the caster that summoned them. Keeping too many constructs alive could prevent the psycaster from casting other abilities.</description>
		<statBases>
			<ComfyTemperatureMin>-100</ComfyTemperatureMin>
			<ComfyTemperatureMax>250</ComfyTemperatureMax>
			<MarketValue>150</MarketValue>
			<ArmorRating_Sharp>0.6</ArmorRating_Sharp>
			<MoveSpeed>4.6</MoveSpeed>
		</statBases>
		<tools>
			<li>
				<label>head</label>
				<capacities>
					<li>Cut</li>
				</capacities>
				<power>12</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				
			</li>
		</tools>
		<comps>
			<li Class="AnimalBehaviours.CompProperties_InitialHediff">
				<hediffname>VPE_NoPain</hediffname>
				<hediffseverity>1</hediffseverity>
			</li>
			<li Class="AnimalBehaviours.CompProperties_DoesntFlee">

			</li>
			<li Class="VanillaPsycastsExpanded.CompProperties_BreakLink">
				<gizmoImage>Effects/Technomancer/BreakLink/BreakLinkSteelConstruct</gizmoImage>
				<gizmoLabel>VPE_BreakLink</gizmoLabel>
				<gizmoDesc>VPE_BreakLinkDesc</gizmoDesc>
			</li>
		</comps>
		<race>
			<deathActionWorkerClass>VanillaPsycastsExpanded.DeathActionWorker_SlagChunk</deathActionWorkerClass>
			<bloodDef>VPE_Filth_Metal</bloodDef>
			<body>VPE_MetalConstructBody</body>
			<fleshType>VPE_SteelConstructFlesh</fleshType>
			<lifeStageAges>
				<li>
					<def>AnimalAdult</def>
				</li>
			</lifeStageAges>
		</race>
	</ThingDef>
	<PawnKindDef ParentName="DryadKindBase">
		<defName>VPE_SteelConstruct</defName>
		<label>steel construct</label>
		<race>VPE_SteelConstruct</race>
		<combatPower>100</combatPower>
