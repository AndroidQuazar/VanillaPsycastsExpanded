<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ArmorSmithableBase">
    <defName>VPE_Apparel_PlateArmorPrestige</defName>
    <label>prestige plate armor</label>
    <description>Overlapping solid plates of armor covering the entire body from neck to feet.\n\nExpensive and beautiful, prestige armor like this is usually made for those of high status. Embedded eltex threads also enhance the wearer's psychic sensitivity.</description>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
      <researchPrerequisite>PlateArmor</researchPrerequisite>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparel/RoyalPlateArmor/RoyalPlateArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
		<shaderType>CutoutComplex</shaderType>
    </graphicData>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
    </stuffCategories>
    <costStuffCount>170</costStuffCount>
    <statBases>
      <WorkToMake>42000</WorkToMake>
      <MaxHitPoints>290</MaxHitPoints>
      <Mass>15</Mass>
      <StuffEffectMultiplierArmor>0.73</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>1.0</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>15</EquipDelay>
    </statBases>
    <thingSetMakerTags>
      <li>RewardStandardLowFreq</li>
      <li>RewardStandardQualitySuper</li>
    </thingSetMakerTags>
    <equippedStatOffsets>
      <MoveSpeed>-0.8</MoveSpeed>
      <PsychicSensitivityOffset>0.05</PsychicSensitivityOffset>
      <PsychicEntropyRecoveryRate>0.033</PsychicEntropyRecoveryRate>
      <PsychicEntropyMax>0.26672</PsychicEntropyMax>
    </equippedStatOffsets>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/RoyalPlateArmor/RoyalPlateArmor</wornGraphicPath>
	  <useWornGraphicMask>true</useWornGraphicMask>
      <layers>
        <li>Middle</li>
        <li>Shell</li>
      </layers>
      <tags>
        <li>PrestigeCombatGear</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <costList>
      <VPE_Eltex>1</VPE_Eltex>
      <Gold>18</Gold>
    </costList>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.33,0.33,0.33)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.65,0.65,0.65)</only>
        </li>
        <li>
          <weight>6</weight>
          <min>(0.3,0.3,0.3)</min>
          <max>(0.5,0.5,0.5)</max>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>

  <ThingDef ParentName="ApparelNoQualityBase">
    <defName>VPE_Psyring</defName>
    <label>psyring</label>
    <description>An eltex ring created by a skilled technomancer. It holds the knowledge of one particular psycast, and can be used by other psycasters to cast it.</description>
    <thingClass>VanillaPsycastsExpanded.Technomancer.Psyring</thingClass>
    <graphicData>
      <texPath>Effects/Technomancer/Psyring/Psyring</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <techLevel>Ultra</techLevel>
    <statBases>
      <MarketValue>1200</MarketValue>
      <Mass>0.1</Mass>
      <Beauty>1</Beauty>
      <Flammability>0</Flammability>
    </statBases>
    <tradeability>Sellable</tradeability>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
    <thingCategories>
      <li>ApparelUtility</li>
    </thingCategories>
    <apparel>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <scoreOffset>4</scoreOffset>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <careIfDamaged>false</careIfDamaged>
      <ignoredByNonViolent>false</ignoredByNonViolent>
      <wearPerDay>0</wearPerDay>
      <bodyPartGroups>
        <li>MiddleFingers</li>
      </bodyPartGroups>
      <layers>
        <li>OnSkin</li>
      </layers>
      <ai_pickUpOpportunistically>true</ai_pickUpOpportunistically>
    </apparel>
  </ThingDef>
</Defs>