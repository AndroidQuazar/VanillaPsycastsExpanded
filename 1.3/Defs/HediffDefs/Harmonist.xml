        <description>The mind is scrambled by attempting to be two people at once</description>
        <initialSeverity>1</initialSeverity>
        <stages>
            <li>
				<capMods>
					<li>
						<capacity>Sight</capacity>
						<postFactor>0.8</postFactor>
					</li>
					<li>
						<capacity>Moving</capacity>
						<postFactor>0.8</postFactor>
					</li>
				</capMods>
            </li>
        </stages>
    </HediffDef>
