	<HediffDef ParentName="PsycastHediffBase">
		<defName>VPE_Healing</defName>
		<label>psychic healing</label>
		<description>Psychically induced healing boost.</description>
		<stages>
			<li>
				<naturalHealingFactor>2.5</naturalHealingFactor>
			</li>
		</stages>
	</HediffDef>

	<HediffDef ParentName="PsycastHediffBase">
		<defName>VPE_BlockBleeding</defName>
		<label>psychic stabilization</label>
		<description>Psychically induced stasis that stops any bleeding.</description>
		<comps>
			<li Class="HediffCompProperties_Effecter">
				<stateEffecter>VPE_SparksYellow</stateEffecter>
			</li>
		</comps>
	</HediffDef>

	<HediffDef ParentName="PsycastHediffBase">
		<defName>VPE_Immunity</defName>
		<label>psychic immunity</label>
		<description>Psychically induced immunity boost.</description>
		<stages>
			<li>
				<statOffsets>
					<ImmunityGainSpeed>3</ImmunityGainSpeed>
				</statOffsets>
			</li>
		</stages>
	</HediffDef>

	<HediffDef ParentName="PsycastHediffBase">
		<defName>VPE_Overshield</defName>
		<label>psychic overshield</label>
		<description>Psychically induced personal skipbarrier. Impenetrable by ranged projectiles.</description>
		<hediffClass>VanillaPsycastsExpanded.Hediff_Overshield</hediffClass>
	</HediffDef>

	<HediffDef>
		<defName>VPE_GuardianSkipBarrier</defName>
		<label>guardian skipbarrier</label>
		<description>Psychically crafted defensive barrier that generates large amounts of psychic heat in order to sustain itself.</description>
		<hediffClass>VanillaPsycastsExpanded.Hediff_GuardianSkipBarrier</hediffClass>
		<stages>
			<li>
				<statOffsets>
					<MoveSpeed>-1</MoveSpeed>
				</statOffsets>
			</li>
		</stages>
	</HediffDef>

	<HediffDef ParentName="PsycastHediffBase">
		<defName>VPE_RegrowLimbs</defName>
		<label>psychic regeneration</label>
		<description>Psychically induced tissue regeneration, which can close open wounds and regenerate missing body parts.</description>
		<hediffClass>VanillaPsycastsExpanded.Hediff_RegrowLimbs</hediffClass>
	</HediffDef>

	<HediffDef ParentName="InjuryBase">
		<defName>VPE_Regenerating</defName>
		<label>regenerating</label>
		<description>Regenerating wounds, new and old.</description>
		<tendable>false</tendable>
		<injuryProps>
			<painPerSeverity>0.0125</painPerSeverity>
			<canMerge>false</canMerge>
			<destroyedLabel>Destroyed</destroyedLabel>
		</injuryProps>
	</HediffDef>

	<HediffDef ParentName="PsycastHediffBase">
		<defName>VPE_SpeedBoost</defName>
		<label>psychic agility</label>
		<description>Psychically induced agility boost, greatly increasing movement speed.</description>
		<stages>
			<li>
				<statFactors>
					<MoveSpeed>3</MoveSpeed>
				</statFactors>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_Effecter">
				<stateEffecter>VPE_SparksYellow</stateEffecter>
			</li>
		</comps>
	</HediffDef>

	<HediffDef ParentName="PsycastHediffBase">
		<defName>VPE_BladeFocus</defName>
		<label>blade focus</label>
		<description>Psychically induced combat focus, greatly enhancing melee combat capabilities.</description>
		<stages>
			<li>
				<statFactors>
					<VEF_MeleeAttackSpeedFactor>2</VEF_MeleeAttackSpeedFactor>
				</statFactors>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_Effecter">
				<stateEffecter>VPE_SparksRed</stateEffecter>
			</li>
		</comps>
	</HediffDef>

	<HediffDef ParentName="PsycastHediffBase">
		<defName>VPE_FiringFocus</defName>
		<label>firing focus</label>
		<description>Psychically induced combat focus, greatly enhancing ranged combat capabilities.</description>
		<stages>
			<li>
				<statFactors>
					<VEF_RangeAttackSpeedFactor>5</VEF_RangeAttackSpeedFactor>
				</statFactors>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_Effecter">
				<stateEffecter>VPE_SparksWhite</stateEffecter>
			</li>
		</comps>
	</HediffDef>

	<HediffDef ParentName="PsycastHediffBase">
		<defName>VPE_AdrenalineRush</defName>
		<label>psychic rush</label>
		<description>Psychically induced adrenaline rush, increasing sight, hearing and movement capabilities.</description>
		<stages>
			<li>
				<painFactor>0</painFactor>
				<capMods>
					<li>
						<capacity>Sight</capacity>
						<postFactor>1.5</postFactor>
					</li>
					<li>
						<capacity>Hearing</capacity>
						<postFactor>1.5</postFactor>
					</li>
					<li>
						<capacity>Moving</capacity>
						<postFactor>1.5</postFactor>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

	<HediffDef ParentName="PsycastHediffBase">
		<defName>VPE_ControlledFrenzy</defName>
		<label>psychic frenzy</label>
		<description>Temporary, psychically induced frenzy. The energy restores itself with each consecutive kill.</description>
		<hediffClass>VFECore.Abilities.Hediff_Ability</hediffClass>
		<stages>
			<li>
				<statFactors>
					<VEF_MeleeAttackDamageFactor>2</VEF_MeleeAttackDamageFactor>
					<VEF_RangeAttackDamageFactor>2</VEF_RangeAttackDamageFactor>
				</statFactors>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_Effecter">
				<stateEffecter>VPE_RedSmoke</stateEffecter>
			</li>
			<li Class="VanillaPsycastsExpanded.HediffCompProperties_PlaySound">
				<sustainer>VPE_ControlledFrenzy_Sustainer</sustainer>
			</li>
		</comps>
	</HediffDef>

	<HediffDef ParentName="PsycastHediffBase">
		<defName>VPE_GuidedShot</defName>
		<label>guided shot</label>
		<description>Psychically induced insane accuracy.</description>
		<hediffClass>VFECore.Abilities.Hediff_Ability</hediffClass>
		<stages>
			<li>
				<statFactors>
					<VEF_VerbRangeFactor>2</VEF_VerbRangeFactor>
				</statFactors>
			</li>
		</stages>
		<comps>
			<li Class="VFECore.HediffCompProperties_Targeting">
				<neverMiss>true</neverMiss>
				<targetingMote>VPE_WarlordTargettingReticle</targetingMote>
				<initialTargetingMoteScale>3</initialTargetingMoteScale>
				<targetingLineTexPath>UI/Overlays/ThickLine</targetingLineTexPath>
				<targetingLineColor>(255, 0, 0)</targetingLineColor>
				<targetingLineWidth>0.05</targetingLineWidth>
			</li>
		</comps>
	</HediffDef>

	<HediffDef ParentName="PsycastHediffBase">
		<defName>VPE_AgeSickness</defName>
		<label>age sickness</label>
		<description>text.todo</description>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.5</offset>
					</li>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.25</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
	
	<HediffDef ParentName="PsycastHediffBase">
		<defName>VPE_PsychicDrone</defName>
		<label>text.todo</label>
		<description>text.todo</description>
		<hediffClass>VanillaPsycastsExpanded.Hediff_PsychicDrone</hediffClass>
		<comps>
			<li Class="VanillaPsycastsExpanded.HediffCompProperties_PlaySound">
				<endSound>VPE_PsychicDrone_End</endSound>
				<sustainer>VPE_PsychicDrone_Sustainer</sustainer>
			</li>
		</comps>
	</HediffDef>
</Defs>