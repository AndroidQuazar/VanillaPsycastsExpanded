        <defName>VPE_IntenseShadows</defName>
        <conditionClass>VanillaPsycastsExpanded.Nightstalker.GameCondition_IntenseShadows</conditionClass>
        <label>intensified shadows</label>
        <description>text.todo</description>
        <endMessage>The shadows return to normal.</endMessage>
        <preventRain>false</preventRain>
        <canBePermanent>false</canBePermanent>
    </GameConditionDef>
